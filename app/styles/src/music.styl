.drumkit 
	background #8DC5D6
	padding 15px
	text-align center

.instrument-row 
	font small-caps normal 12pt Arial, sans-serif
	margin 0
	/*width: 100%;*/
	box-sizing border-box

.beat-label 
	width 75px
	display inline-block
	vertical-align text-top

.beat {
	display: inline-block;
	width: 35px;
	padding: 5px;
}
.beat-object {
	display: inline-block;
	padding: 5px;
	border: 1px solid black;
	background: white;
	width: 25px;
	height: 25px;
	border-radius: 12.5px;
}
.beat-object.active {
	background: #333;
}
